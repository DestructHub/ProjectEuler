#!/bin/sh


function staged_files () {
    git diff --cached --name-only
}

# get the current file which differs on the master branch
function diff-master-files {
    git fetch origin # get the last changes from origin/master
    git diff origin/master --name-only
}

echo "STAGED FILES"
staged_files

echo "DIFF MASTER FILES"
diff_master_files

echo "Forcing test fail"
exit 1
